{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist/runner",
    "isolatedModules": true,
    "declaration": true,
    "lib": ["esnext"],
    "types": ["node"]
  },
  "include": ["runner/**/*.ts"],
  "exclude": ["node_modules", "examples", "scripts"]
}
